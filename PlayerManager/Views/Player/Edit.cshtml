@{
}
@model PlayerManager.Models.Entities.Player

<h1>Edit Player</h1>

@if (Model is null)
{
    <p>Don't have any player in Database with this Id</p>
} else
{
    <form method="post">


        <div class="mt-3">
            <label class="form-lable">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-lable">Name</label>
            <input type="text" class="form-control" asp-for="playerName" />
        </div>

        <div class="mt-3">
            <label class="form-lable">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-lable">Phone</label>
            <input type="text" class="form-control" asp-for="PhoneNumber" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="contracted" asp-for="Contact" />
            <label class="form-check-label" for="contracted">Contact</label>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger ms-3" asp-controller="PLayer" asp-action="Delete">Delete</button>
    </form>
}


